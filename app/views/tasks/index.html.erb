<h1>Tasks#index</h1>
<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.description %></p>
  <h4><%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  <h4>
  <h4><%= link_to "Edit", edit_task_path(task) %></h4>
<% end %>

<h4><%= link_to "New task", new_task_path %></h4>
